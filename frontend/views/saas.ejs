<!-- frontend/views/saas.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Software as a Service - InfoComm Worldwide</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Animate.css for Animations -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css">
    <style nonce="<%= nonce %>">
        /* Custom Styles */
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #212529;
            line-height: 1.6;
            margin: 0;
            padding: 0;
        }
        .navbar-brand img {
            border-radius: 50%;
            width: 60px;
            height: 60px;
            object-fit: cover;
            margin-right: 10px;
            vertical-align: middle;
        }
        /* Flash Messages */
        .flash-container {
            position: fixed;
            top: 70px; /* Adjust based on navbar height */
            width: 100%;
            z-index: 1050; /* Ensure it appears above the navbar */
            padding: 0 15px;
            pointer-events: none; /* Allows clicks to pass through if no alerts are present */
        }
        .flash-container .alert {
            pointer-events: auto; /* Enables interaction with alerts */
        }
        /* SaaS Header Section */
        .header {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 60vh; /* Adjust for vertical centering */
            padding: 60px 20px;
            text-align: center;
            background-color: #ffffff;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            border-radius: 10px;
        }
        .header h1 {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 20px;
        }
        .header p {
            font-size: 1.1rem;
            color: #6c757d;
            margin-bottom: 30px;
        }
        /* SaaS Features Section */
        .saas-section {
            padding: 60px 0;
            background-color: #ffffff;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            border-radius: 10px;
        }
        .saas-section h2 {
            font-size: 2rem;
            margin-bottom: 20px;
        }
        .saas-section p {
            font-size: 1rem;
            color: #6c757d;
            margin-bottom: 30px;
        }
        .btn-get-started {
            padding: 15px 30px;
            font-size: 1rem;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
        .btn-get-started:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>

    <!-- Include Navbar -->
    <%- include('partials/navbar') %>

    <!-- Flash Messages -->
    <% if (
            (Array.isArray(success_msg) && success_msg.length > 0 && typeof success_msg[0] === 'string' && success_msg[0].trim().length > 0) || 
            (Array.isArray(error_msg) && error_msg.length > 0 && typeof error_msg[0] === 'string' && error_msg[0].trim().length > 0) || 
            (Array.isArray(error) && error.length > 0 && typeof error[0] === 'string' && error[0].trim().length > 0)
        ) { %>
        <div class="flash-container">
            <% if (Array.isArray(success_msg) && success_msg.length > 0 && typeof success_msg[0] === 'string' && success_msg[0].trim().length > 0) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= success_msg[0] %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>
            <% if (Array.isArray(error_msg) && error_msg.length > 0 && typeof error_msg[0] === 'string' && error_msg[0].trim().length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= error_msg[0] %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>
            <% if (Array.isArray(error) && error.length > 0 && typeof error[0] === 'string' && error[0].trim().length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= error[0] %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>
        </div>
    <% } %>

    <!-- SaaS Header Section -->
    <section class="header animate__animated animate__fadeInDown">
        <div class="container">
            <h1>Software as a Service</h1>
            <p>Empowering your business with scalable and efficient software solutions tailored to your needs.</p>
            <!-- Additional Links for APIs and Models -->
            <div class="mt-4">
                <a href="/apis" class="btn btn-link">APIs</a>
                <span>|</span>
                <a href="/models" class="btn btn-link">Models</a>
            </div>
        </div>
    </section>

    <!-- SaaS Features Section -->
    <section class="saas-section">
        <div class="container">
            <h2 class="mb-4"><i class="fas fa-cogs me-2"></i>Our Features</h2>
            <div class="row justify-content-center">
                <!-- Feature 1 -->
                <div class="col-md-4 mb-4 text-center">
                    <i class="fas fa-shield-alt fa-3x mb-3 text-success"></i>
                    <h4>Secure & Reliable</h4>
                    <p>
                        Benefit from top-notch security features and reliable performance to keep your operations running smoothly.
                    </p>
                </div>
                <!-- Feature 2 -->
                <div class="col-md-4 mb-4 text-center">
                    <i class="fas fa-cloud-upload-alt fa-3x mb-3 text-warning"></i>
                    <h4>Cloud-Based Access</h4>
                    <p>
                        Access your software from anywhere with our cloud-based solutions, ensuring flexibility and convenience.
                    </p>
                </div>
                <!-- Feature 3 -->
                <div class="col-md-4 mb-4 text-center">
                    <i class="fas fa-cogs fa-3x mb-3 text-primary"></i>
                    <h4>Customizable Solutions</h4>
                    <p>
                        Tailor our software to fit your unique business requirements, ensuring maximum efficiency and productivity.
                    </p>
                </div>
            </div>

            <!-- Call to Action -->
            <div class="text-center mt-5">
                <a href="/signup" class="btn btn-primary btn-get-started">
                    <i class="fas fa-paper-plane me-2"></i> Get Started
                </a>
            </div>
        </div>
    </section>

    <!-- Include Footer -->
    <%- include('partials/footer') %>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" nonce="<%= nonce %>"></script>
    <!-- Update current year in footer -->
    <script nonce="<%= nonce %>">
        document.addEventListener('DOMContentLoaded', function() {
            const currentYearElement = document.getElementById('currentYear');
            if (currentYearElement) {
                currentYearElement.textContent = new Date().getFullYear();
            }
        });
    </script>
</body>
</html>
